@model Books.Feature.Carousel.Models.CarouselViewModel
@using Glass.Mapper.Sc.Web.Mvc
<!-- Slideshow container -->
<link href="~/Styles/Carousel.css" rel="stylesheet" type="text/css" />
<div class="slideshow-container">
    @foreach (var item in Model.Items)
    {
        <!-- Full-width images with number and caption text -->
        <div class="mySlides fade">
            @Html.Glass().RenderImage(item, x => x.Image, new{@style = "width:100%"}, isEditable: true)
                    @if (item.ShowCaption)
                    {
                        <div class="text">@Html.Glass().Editable(item, x => x.Caption)</div>
                    }
        </div>
        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    }
    <br />
    @foreach (var item in Model.Items)
    {
        <!-- The dots/circles -->
        <div>
            <span class="dot" onclick="currentSlide(@Model.Items.IndexOf(item))"></span>
        </div>
    }
    <script src="~/Scripts/Carousel.js"></script>
</div>