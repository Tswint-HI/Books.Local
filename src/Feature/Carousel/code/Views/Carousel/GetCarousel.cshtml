@model Books.Feature.Carousel.Models.CarouselViewModel
<!-- Slideshow container -->
<link href="~/Styles/Carousel.css" rel="stylesheet" type="text/css" />
<div class="slideshow-container">
    @foreach (var item in Model.Items)
    {
        <!-- Full-width images with number and caption text -->
        <div class="mySlides fade">
            @*<div class="numbertext">@Model.Items.IndexOf(item) / @Model.Items.Count()</div>*@
            <img src="@item.ImageUrl" alt="@item.ImageAlt" style="width:100%">
            @if (item.ShowCaption)
            {
                <div class="text">@item.Caption</div>
            }           
        </div>
        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    }
    <br>
    @foreach (var item in Model.Items)
    {
    <!-- The dots/circles -->
    <div @*style="text-align:center"*@>
      <span class="dot" onclick="currentSlide(@Model.Items.IndexOf(item))"></span>
    </div>
    }
    <script src="~/Scripts/Carousel.js"></script>
</div>